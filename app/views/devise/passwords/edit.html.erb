<div class="container mt-2">
 <div class="row justify-content-center">
    <div class="col-md-6">
      <h2 class="text-center mb-4"><%=t('text.change_your_password')%></h2>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'form-signin' }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div class="form-label-group">
          <%= f.label :password, "New password", class: 'form-label mb-1' %>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'form-control', placeholder: t('text.new_password') %>          
          <% if @minimum_password_length %>
            <em class="form-text text-muted">(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
        </div>

        <div class="form-label-group mb-2">
          <%= f.label :password_confirmation, t('text.confirm_new_password'), class: 'form-label mb-1' %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', placeholder: t('text.confirm_new_password') %>
        </div>

        <div class="form-group mb-2">
          <%= f.submit t('text.change_password'), class: 'btn btn-lg btn-success btn-block' %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
 </div>
</div>

