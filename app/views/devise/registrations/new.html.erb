<div class="container">
 <div class="row justify-content-center">
    <div class="col-md-6">
      <h2 class="text-center mb-4"><%= t('text.sign_up')%></h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-signin' }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-label-group">
          <%= f.label :email, class: 'form-label mb-1' %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'Email' %>
        </div>

        <div class="form-label-group">
           <%= f.label :password, class: 'form-label mb-1' %>
          <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', placeholder: t('text.password') %>
          <% if @minimum_password_length %>
            <em class="form-text text-white">(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
        </div>

        <div class="form-label-group">
          <%= f.label :password_confirmation, class: 'form-label mb-1' %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', placeholder: t('text.password_confirmation') %>
        </div>

        <div class="form-group mt-2">
          <div class='d-flex justify-content-between'>
            <div class='left'>
              <%= f.submit t('text.sign_up'), class: 'btn btn-success btn-block' %>
            </div>
            <div class='right'>
              <%= render "devise/shared/links" %>
            </div>
        </div>
      <% end %>
    </div>
 </div>
</div>

