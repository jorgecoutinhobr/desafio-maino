<div class="card bg-dark mb-1">
  <div class="card-body text-white">
    <% if comment.user.present? %>
      <div class='d-flex justify-content-between'>
        <div class='left'>
          <h5 class="card-title"><%= comment.user.email%></h5>
        </div>
        <div class='right'>
          <% if comment.user == current_user %>
            <%= button_to post_comment_path(comment.post, comment), method: :delete, data: { turbo_confirm: t('text.are_you_sure') }, class: 'btn btn-danger' do %>
              <i class="bi bi-trash3"></i>
            <% end %>
          <% end %>
        </div>
      </div>
    <% else %>
      <h5 class="card-title"><%= t('text.anonymous') %></h5>
    <% end %>
    <h6 class="card-subtitle mb-2"><%= comment.created_at.strftime("%d %m %Y") %></h6>
    <p class="card-text"><%= comment.body %></p>
  </div>
</div>

