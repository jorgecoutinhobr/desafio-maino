<div id="<%= dom_id post %>">
  <div class='mx-auto p-2'>
    <h1 class='text-center'><%= post.title %></h1>

    <p class='text-center'>
      <%= post.body %>
    </p>
  <div class='d-flex justify-content-between'>
    <div class='text-left'>
      <p>
        <%= t('text.created_by')%> -
        <%= post.user.email %>
      </p>
      <p>
        <%= t('text.written_by')%> -
        <%= post.created_at.strftime("%d/%m/%Y - %H:%M") %>
     </p>
    </div>
    <div class='d-flex text-right'>
      <div class='px-1'>
        <%= link_to t('links.edit'), edit_post_path(@post), class: 'btn btn-success' if @post.user == current_user %>
      </div>
      <div>
        <%= button_to t('links.delete'), post_path(@post), method: :delete, data: { turbo_confirm: "Are you sure?"}, class: 'btn btn-danger'  if @post.user == current_user %>
      </div>
    </div>
   </div>
  </div>
</div>