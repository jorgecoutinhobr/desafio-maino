<div id="<%= dom_id post %>">
  <div class='mx-auto p-2'>
    <h1 class='text-center'><%= post.title %></h1>

    <p class='text-center'>
      <%= post.body %>
    </p>

    <p class='text-left subtle'>
      Created by:
      <%= post.user.email %>
    </p>
    <p class='text-left'>
      Writed at:
      <%= post.created_at.strftime("%d %m %Y %H:%M") %>
    </p>
  </div>
</div>